<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="575.0" prefWidth="859.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dream.fcard.gui.controllers.windows.MainWindow">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem fx:id="onCreateNewDeck" mnemonicParsing="false" text="Create a new deck" />
<!--                        <MenuItem mnemonicParsing="false" text="Open…" />-->
<!--                        <Menu mnemonicParsing="false" text="Open Recent" />-->
                        <SeparatorMenuItem mnemonicParsing="false" />
<!--                        <MenuItem mnemonicParsing="false" text="Close" />-->
<!--                        <MenuItem mnemonicParsing="false" text="Revert" />-->
                        <SeparatorMenuItem mnemonicParsing="false" />
<!--                        <MenuItem mnemonicParsing="false" text="Preferences…" />-->
                        <SeparatorMenuItem mnemonicParsing="false" />
                        <MenuItem fx:id="quit" mnemonicParsing="false" text="Quit" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Utilities">
                    <items>
                        <MenuItem fx:id="jsEditor" mnemonicParsing="false" text="JavaScript Playground" />
                        <MenuItem fx:id="javaEditor" mnemonicParsing="false" text="Java Playground" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Statistics">
                    <items>
                        <MenuItem fx:id="statistics" mnemonicParsing="false" text="View my statistics" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <SplitPane dividerPositions="0.28" focusTraversable="true" prefHeight="438.0" prefWidth="860.0" VBox.vgrow="ALWAYS">
            <items>
                <VBox fx:id="deckScrollPane" spacing="10.0">
                    <children>
                        <Label alignment="CENTER" layoutX="1.0" layoutY="-2.0" prefHeight="34.0" prefWidth="212.0" text="Your Decks" />
                  <ScrollPane VBox.vgrow="ALWAYS">
                     <content>
                         <ListView fx:id="deckList" minHeight="-Infinity" minWidth="-Infinity" prefWidth="200.0" />
                     </content>
                  </ScrollPane>
                  <Button mnemonicParsing="false" text="Add new...">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
                    </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
                </VBox>
                <ScrollPane fx:id="displayScrollPane" prefHeight="438.0" prefWidth="639.0">
                    <content>
                        <VBox fx:id="displayContainer" prefHeight="431.0" prefWidth="637.0" />
                    </content>
                </ScrollPane>
            </items>
        </SplitPane>
        <TextField fx:id="commandLine" onAction="#handleUserInput" prefHeight="69.0" prefWidth="859.0" />
        <HBox id="HBox" alignment="CENTER_LEFT" prefHeight="58.0" prefWidth="859.0" VBox.vgrow="NEVER">
            <children>
                  <Label fx:id="messageLabel" textFill="#ed0a0a" HBox.hgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </children>
</VBox>
